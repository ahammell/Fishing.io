<body>
    @* Header Beginning *@
    <div id="header" class="header banner-background">
        <div class="row">
            <div class="width50 margin-top-vw">
                <a href="~/Home/Index">
                    <img class="logoImg" src="~/Content/Images/YOURLOGOHERE.png" />
                </a>
            </div>
            <div class="width50">
                <img class="header-image" src="~/Content/Images/fisherman.png" />
            </div>
        </div>
    </div>
    @* Nav Beginning *@
    <nav id="nav" class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse right-align" id="navbarSupportedContent">
            <form class="form-inline my-2 my-lg-0 ml-auto">
                <input class="form-control mr-sm-2 ml-auto" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
            </form>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">Cart</a>
                </li>
                @Html.Partial("_loginPartial")
            </ul>
        </div>

    </nav>
    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Content/masonry-docs/masonry.pkgd.js"></script>
    <script src="~/Content/masonry-docs/js/masonry-docs.min.js"></script>
