@{
    ViewBag.Title = "Home Page";
}
<div class="grid">
    <div class="center">
        @for (int i = 0; i < 20; i++)
        {
            <div class="grid-item">
                <div class="row">
                    <div class="col-sm-12">
                        <p>PRODUCT IMAGE GOES HERE</p>
                    </div>
                </div>
                <div class="row cardBottom">
                    <div class="col-sm-4">
                        <button class="info-button"><i class="fas fa-info-circle"></i></button>
                    </div>
                    <div class="col-sm-8">
                        <input class="btn btn-success cart-button" value="Add to Cart" type="button"/>
                    </div>
                </div>
            </div>

        }
    </div></div>


@section scripts{
    <script>
        $('.grid').masonry({
            itemSelector: '.grid-item',
            columnWidth: 80,
            gutter: 5
        });
    </script>
}